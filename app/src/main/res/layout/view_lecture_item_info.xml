<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:tools="http://schemas.android.com/tools">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/lecture_pic"
        android:layout_width="135dp"
        android:layout_height="90dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:id="@+id/lecture_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/lecture_pic"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lecture_time"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_marginRight="12dp"
        tools:text="讲座名字，讲座名字，讲座名字，讲座名字，讲座名字，讲座名字，讲座名字，讲座名字，"
        android:textSize="14sp"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/lecture_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/lecture_name"
        app:layout_constraintTop_toBottomOf="@id/lecture_name"
        app:layout_constraintRight_toRightOf="@id/lecture_name"
        app:layout_constraintBottom_toTopOf="@id/lecture_shcool"
        android:layout_marginTop="7dp"
        android:textSize="12sp"
        tools:text="2020-06-28 周日"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/lecture_shcool"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/lecture_time"
        app:layout_constraintTop_toBottomOf="@id/lecture_time"
        app:layout_constraintBottom_toTopOf="@id/lecture_tag"
        android:layout_marginTop="2dp"
        android:textSize="12sp"
        tools:text="中国人民大学"
        android:textColor="#999999"
        />
    <TextView
        android:id="@+id/lecture_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/lecture_name"
        app:layout_constraintTop_toBottomOf="@id/lecture_shcool"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#47a86c"
        android:textSize="13sp"
        tools:text="#文化"
        android:includeFontPadding="false"
        />

    <ImageView
        android:id="@+id/lecture_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/audio"
        app:layout_constraintTop_toTopOf="@id/lecture_tag"
        app:layout_constraintBottom_toBottomOf="@id/lecture_tag"
        app:layout_constraintRight_toRightOf="@id/lecture_name"
        />
</androidx.constraintlayout.widget.ConstraintLayout>